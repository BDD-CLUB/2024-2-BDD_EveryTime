<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            >
            <ImageView
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <LinearLayout
                android:layout_marginLeft="25dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@+id/goBack"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토이 프로젝트"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자유 게시판"
                    android:textColor="#969696"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/postDetailHamburger"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_more_vert_24"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                >
                <TextView
                    android:id="@+id/authorUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="임지민"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="15dp"
                    android:textColor="#ACACAC"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/createAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/01 21:51"
                    android:textSize="15dp"
                    android:textColor="#ACACAC"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시글 제목"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingBottom="6dp"
                />
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시글 내용"
                android:textColor="@color/black"
                android:textSize="14.5dp"
                />

            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/like"
                    app:tint="#BF5049"
                    />
                <TextView
                    android:id="@+id/postDetailLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#BF5049"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingRight="7dp"
                    android:paddingLeft="2dp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="#56B8BB"
                    android:src="@drawable/comment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#56B8BB"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/i_love_ad"
            >
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% 쿠폰으로 더욱 풍성하게"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근데 쓸 수 있는 곳은 없음"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    />
            </LinearLayout>
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="6dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ad"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="댓글을 입력하세요."
            android:background="@drawable/edit_comment"
            android:textColorHint="#B3B3B3"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="35dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            />
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/baseline_send_24"
            app:tint="#E2180C"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>